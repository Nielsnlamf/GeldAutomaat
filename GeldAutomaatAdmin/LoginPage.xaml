<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeldAutomaatAdmin.LoginPage"
             NavigationPage.HasBackButton="False">
    
    <VerticalStackLayout
        Padding="20" Spacing="20">
        <Label Text="Login" FontSize="Large" />
        <Entry Placeholder="Email" Completed="LoginBtnClicked" x:Name="EmailField" />
        <Entry Placeholder="Password" Completed="LoginBtnClicked" IsPassword="True" x:Name="PasswordField" />
        <Button Text="Submit" Clicked="LoginBtnClicked"/>

    </VerticalStackLayout>
</ContentPage>